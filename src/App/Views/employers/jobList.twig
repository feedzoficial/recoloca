{% extends 'base.twig' %}

{% block content %}

{% include 'header.twig' %}

<section id="home" class="pb-2">
    <!-- Início seção home -->
    <div class="container">
        <div class="row">
            <div class="col-md-6 d-flex">
                <!-- Textos da seção -->
                <div class="align-self-center mt-5 pt-5">
                    <h1 class="display-4" style="font-weight: 500;">Vagas</h1>
                    <p class="mt-2">
                        Confira aqui as empresas parceiras que estão nessa jornada com a Feedz e se aplique para as vagas em aberto. Boa sorte!
                    </p>
                </div>
            </div>
            <!--/fim textos da seção -->
        </div>
    </div>
</section>
<!--/fim seção home -->


<section>
    <!-- Job list start -->
    <div id="candidates" class="candidate-list-area">
        <div class="container">
            <div class="candidate_lists">
                <div class="row">
                    {% for company in jobsCompanies %} 
                    <div class="col-md-6 col-lg-3">
                        <div class="single-candidate white-bg d-flex justify-content-center">
                            <div class="text-center job_list_area">
                                <div class="thumb">
                                    <img src="data:image;base64,{{company.logo_image}}" alt="Logo da empresa {{company.name}}" title="{{company.name}}" width="110px" height="auto">
                                </div>
                                <h4 class="card-title font-weight-bold">{{company.name}}</h4>
                                <a href="{{company.jobs_link}}" target="_blank"
                                class="btn btn-primary">Ver vagas</a>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>

                {#<div class="d-flex justify-content-center mt-5">
                    {% if currentPage > 1 %}
                    <button id="idButtonReturnPage" class="page-link" tabindex="-1">Anterior</button>
                    {% endif %}

                    {% if currentPage != maxPage %}
                    <button id="idButtonNextPage" class="page-link">Próxima</button>
                    {% endif %}
                </div>#}

            </div>
        </div>
    </div>
    <!-- Job list end -->
</section>

{% include 'message.twig' %}

{% include 'footer.twig' %}


{% endblock %}